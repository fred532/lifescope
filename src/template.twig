<!DOCTYPE html>
<html lang="{{ config.language }}">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <link rel="icon" type="image/svg+xml" href="./static/favicon.svg" />

        <link rel="stylesheet" href="./css/style.css?{{ timestamp }}" />
        
        <script src="/js/slider.js?{{ timestamp }}"></script>
        
        <title>
            {% if title %}{{ title }} - {% endif %}{{
                config.labels.project_title
            }}
        </title>
    </head>
    <body>
        <ul class="search-results"></ul>

        <header>
            <a href="index.html">
                <h3>{{ config.labels.project_title }}</h3>
            </a>
        </header>

        <div class="row">
            <div class="column-1">
                <div class="content">{{ content }}</div>
            </div>
        </div>
    </body>
</html>
